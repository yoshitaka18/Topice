<div class="container-fluid">
  <div class="row">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="col-md-4 col-sm-4 col-xs-6 ">
        <p>
        <%= link_to profile_img(user), user_path(user),:class => "card-img-top", :alt => "Card image cap" %><br>
        <%= user.email %><br>
        <% if user.id != current_user.id %>
          <div class="item">
             <%= link_to user.name, user %>
             <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
          </div>
          <%= render partial: 'follow_form', locals: { user: user } if signed_in?  %>
        <% end %>
        <br></p>
      </div>
  <% end %>
  </div>
</div>
