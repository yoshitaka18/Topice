<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>投稿一覧</h1>
    <%= link_to "写真を投稿する", new_blog_path, class: 'btn btn-default' %>
    <% @blogs.each do |blog| %>
    <div class="row">
      <p><%= blog.user.name %>が投稿しました。</p>
      <p class="post-image"><%= image_tag(blog.picture) %></p>
      <%= link_to blog_path(blog) do %>
        <h4><strong><%= blog.title %></strong></h4>
      <% end %>
      <p><%= blog.content %></p>
      <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
<div id="page-blogs-btn" class="page-blogs-btn">
    <p><a class="move-page-blogs" id="move-page-blogs">▲</a></p>
</div>
